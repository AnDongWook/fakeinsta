<h1>Board#show</h1>

<div class="well">
    제목 : <%= @post.title %><br>
    내용 : <%= @post.content %>
</div>
<form action="/board/<% @post.id %>/create_reply">
    <input type="text" name="reply" placeholder="댓글을 입력해주세요"></input>
    <input type="submit" value="댓글입력">
</form>

<% @reply.each do |r| %>
<%= r.content %>
<% end %>